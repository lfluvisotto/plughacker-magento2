            <label>Enable Vault for Card Payments</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/plug_creditcard_vault/active</config_path>
        </field>
        <field id="title" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Vault Title</label>
            <config_path>payment/plug_creditcard_vault/title</config_path>
        </field>
    </group>
</include>
