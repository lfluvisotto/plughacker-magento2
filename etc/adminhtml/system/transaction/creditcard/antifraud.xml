<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="plug_transaction_creditcard_antifraud" translate="label comment" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="500">
    	<label>Anti fraud</label>
	    <field id="antifraud_active" showInDefault="1" showInStore="1" showInWebsite="1" translate="label" type="select">
	        <label>Active</label>
	        <comment />
	        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
	        <config_path>payment/plug_creditcard/antifraud_active</config_path>
	    </field>
	    <field id="antifraud_min_amount" showInDefault="1" showInStore="1" showInWebsite="1" translate="label" type="text">
			<backend_model>PlugHacker\PlugPagamentos\Model\Validation\GenericValidation</backend_model>
	        <label>Min Amount</label>
	        <comment />
	        <config_path>payment/plug_creditcard/antifraud_min_amount</config_path>
            <depends>
                <field id="antifraud_active">1</field>
            </depends>
	    </field>
	</group>
</include>
